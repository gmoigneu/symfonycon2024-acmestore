{% extends 'base.html.twig' %}

{% block title %}Image Result{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
        <div class="relative py-3 sm:max-w-xl sm:mx-auto">
            <div class="relative px-4 py-10 bg-white mx-8 md:mx-0 shadow rounded-3xl sm:p-10">
                <div class="max-w-md mx-auto">
                    <div class="text-center">
                        <h2 class="text-2xl font-bold mb-6 text-gray-800">Question</h2>
                        <p class="text-gray-600 mb-8">{{ question }}</p>
                        <h2 class="text-2xl font-bold mb-6 text-gray-800">Answer</h2>
                        <p class="text-gray-600 mb-8 p-4 bg-white rounded-lg">{{ answer }}</p>
                        <a href="{{ path('question_index') }}" class="inline-block bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600 transition duration-300 ease-in-out">
                            Ask Another Question
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
